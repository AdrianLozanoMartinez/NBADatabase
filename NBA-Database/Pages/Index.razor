@page "/"
@inject HttpClient Http

<PageTitle>NBA Database</PageTitle>

<h1 class="verTexto">Hello, world!</h1>

@if (players == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in players)
            {
                <tr>
                    <td>@forecast.PlayerName</td>
                    <td>@forecast.TeamAbbreviation</td>
                    <td>@forecast.Age</td>
                    <td>@forecast.PlayerHeight</td>
                </tr>
            }
        </tbody>
    </table>
}

